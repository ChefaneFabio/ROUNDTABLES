{
  "version": 2,
  "build": {
    "builder": "@railway/nixpacks",
    "buildCommand": "npm run build",
    "startCommand": "npm start"
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "variables": {
    "NODE_ENV": "production",
    "PORT": "$PORT"
  }
}