# Database
DATABASE_URL="postgresql://username:password@localhost:5432/roundtables_lms"

# Server
PORT=5000
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:5173

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-change-in-production

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@example.com

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Coordinator Emails (comma separated)
COORDINATOR_EMAILS=admin@example.com

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Stripe (optional - for payments)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# ============================================
# VIDEO CONFERENCING INTEGRATIONS
# ============================================

# Zoom API (https://marketplace.zoom.us/develop/create)
ZOOM_CLIENT_ID=your-zoom-client-id
ZOOM_CLIENT_SECRET=your-zoom-client-secret
ZOOM_ACCOUNT_ID=your-zoom-account-id

# Google Meet/Calendar API (https://console.cloud.google.com)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Microsoft Teams API (https://portal.azure.com)
TEAMS_CLIENT_ID=your-teams-client-id
TEAMS_CLIENT_SECRET=your-teams-client-secret
TEAMS_TENANT_ID=your-teams-tenant-id

# ============================================
# ITALIAN ELECTRONIC INVOICING (SDI)
# ============================================

# SDI Integration (optional - for Fattura Elettronica)
SDI_ENABLED=false
SDI_ENDPOINT=https://sdi.fatturapa.gov.it
SDI_CERTIFICATE_PATH=./certs/sdi-certificate.p12
SDI_CERTIFICATE_PASSWORD=your-certificate-password

# ============================================
# AI FEATURES
# ============================================

# OpenAI API (for AI Chat Coach)
# Get your key at https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key

# ============================================
# SSO/SAML (Enterprise Single Sign-On)
# ============================================

# SSO is configured per-school via the admin panel
# No global environment variables needed
