# Database
DATABASE_URL="postgresql://username:password@localhost:5432/roundtables"

# Server
PORT=5000
NODE_ENV=development

# SMTP Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@makaitalia.com

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Coordinator Emails (comma separated)
COORDINATOR_EMAILS=training@makaitalia.com,alessia@makaitalia.com

# JWT Secret (generate a secure secret)
JWT_SECRET=your-super-secure-jwt-secret-here

# Microsoft Forms Integration
# Default Microsoft Forms URL for voting (can be overridden per roundtable)
MS_FORMS_VOTING_URL=https://forms.office.com/r/YOUR_FORM_ID
# Webhook secret for validating Power Automate webhooks (optional but recommended)
MS_FORMS_WEBHOOK_SECRET=your-webhook-secret-here

# Microsoft Teams Integration (optional)
# Incoming webhook URL for Teams notifications to trainers and coordinators
# Setup: Teams channel → Connectors → Incoming Webhook
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/YOUR_WEBHOOK_URL

# Cost Monitoring
# Costs in EUR for budget calculations and alerts
LEVEL_TEST_COST=50
TRAINER_SESSION_COST=100
OVERHEAD_PER_PARTICIPANT=20